   <style>
   td.details-control {
     width: 20px;
     text-align: center;
     cursor: pointer;
   }
   td.details-control::before {
     content: '+';
   }
   tr.shown td.details-control::before {
     content: '-';
   }
   </style>

   <table title="Method Overview" id="methods-table" class="display" style="width:120%">
     <thead>
       <tr>
         <th>See More</th>           <!-- expand/collapse -->
         <th>Method</th>
         <th>Year</th>
         <th>Task</th>
         <th>Code</th>
       </tr>
     </thead>
     <tbody>
     {% for m in methods %}
       <tr data-description="{{ m.Description|e }}">
         <td class="details-control"></td>
         <td>
           <a href="{{ m.Publication }}">{{ m.Method }}</a>
         </td>
         <td>{{ m.Year }}</td>
         <td>{{ m.Task }}</td>
         <td>
           <a href="{{ m['Code Availability'] }}">
             <img src="_static/github-mark.png" height="24" alt="GitHub"/>
           </a>
         </td>
       </tr>
     {% endfor %}
     </tbody>
   </table>

